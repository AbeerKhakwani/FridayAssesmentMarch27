<html>
<head>
    <title>Brand</title>
</head>
<body>
    <h1>{{ brand.getBrand }}</h1>

{% for store in all_stores%}
     {{ store.getName }}
{% endfor %}

    <h4>Add a Store to this category:</h4>

    <form action='/add_store' method='post'>
        <input id="brand_id" name="brand_id" type="hidden" value="{{ brand.getId }}">
        <label for="store_id">Select a Store</label>
        <select id='store_id' name='store_id' type='text'>
          {% for store in stores %}
            <option value="{{ store.getId }}"> {{ store.getName }} </option>
          {% endfor %}
        </select>
        <button type='submit'>Add Store</button>
    </form>

    <p><a href="/brand/{{ brand.getId }}/edit">Edit this brand</a></p>

    <p><a href='/'>Home</a></p>


</body>
</html>
